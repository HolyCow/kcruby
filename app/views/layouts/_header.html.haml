#header
  #login
    = render :partial => "layouts/login"
  %h1
    %a{:href => "/"} KC Ruby
  #event
    - @next = Event.next
    %table
      %tr
        %td{:align => "left"}
          %h4
            Our next event:
      %tr
        %td{:align => "center"}
          %h2
            %a{:href => "#{@next.event_url}"}
              = "#{@next.name}"
      %tr
        %td{:align => "center"}
          %a{:href => "#{@next.venue_map}"}
            = "#{@next.venue_name}"
      %tr
        %td{:align => "center"}
          = "#{@next.time.strftime("%A %b %d, %Y")} @ #{@next.time.strftime("%I:%M %p")}"

  / %h3
  /   %a{:href => "#{podcasts_url}"} Latest Podcast
  = render :partial => "layouts/navbar"
      
