!!!
%html
  %head
    %title KC Ruby | #{:title}
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{'name' => 'description', :content => 'The Kansas City Ruby Community'}    
    %meta{"name" => "viewport", :content => "width=930"}
    %meta{'name' => 'keywords', :content => 'Kansas City, KC, Rails, Ruby, Ruby on Rails, Community'}
    %link{:rel => "shortcut icon", :href => "/images/application/kc-sc-ico.png"}
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #page
      = render :partial => "layouts/header"
      = yield
