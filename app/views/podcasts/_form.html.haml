= form_for @podcast do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :video_url
    %br
    = f.text_field :video_url
  %p
    = f.label :thumbnail_medium
    %br
    = f.text_field :thumbnail_medium
  %p
    = f.label :size
    %br
    = f.text_field :size
  %p
    = f.label :duration
    %br
    = f.text_field :duration
  %p
    = f.label :upload_date
    %br
    = f.date_select :upload_date
  %p
    = f.label :thumbnail_large
    %br
    = f.text_field :thumbnail_large
  %p
    = f.label :width
    %br
    = f.text_field :width
  %p
    = f.label :height
    %br
    = f.text_field :height
  %p
    = f.label :private_video
    %br
    = f.check_box :private_video
  %p
    = f.submit
