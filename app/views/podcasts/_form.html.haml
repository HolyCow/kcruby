= form_for @podcast do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :link
    %br
    = f.text_field :link
  %p
    = f.label :screenshot
    %br
    = f.text_field :screenshot
  %p
    = f.label :size
    %br
    = f.text_field :size
  %p
    = f.label :duration
    %br
    = f.text_field :duration
  %p
    = f.label :date
    %br
    = f.date_select :date
  %p
    = f.submit
