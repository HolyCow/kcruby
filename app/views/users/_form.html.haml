= form_for @user do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :about
    %br
    = f.text_area :about
  %p
    = f.label :links
    %br
    = f.text_area :links
  %p
    = f.label :avatar
    %br
    = f.text_field :avatar
  %p
    = f.label :token
    %br
    = f.text_field :token
  %p
    = f.label :user_since
    %br
    = f.date_select :user_since
  %p
    = f.label :github_user_id
    %br
    = f.text_field :github_user_id
  %p
    = f.label :twitter_user_id
    %br
    = f.text_field :twitter_user_id
  %p
    = f.label :login_count
    %br
    = f.text_field :login_count
  %p
    = f.label :ruby_since
    %br
    = f.date_select :ruby_since
  %p
    = f.label :neighborhood
    %br
    = f.text_field :neighborhood
  %p
    = f.label :available
    %br
    = f.check_box :available
  %p
    = f.label :show_email
    %br
    = f.check_box :show_email
  %p
    = f.label :email_reminders
    %br
    = f.check_box :email_reminders
  %p
    = f.submit
