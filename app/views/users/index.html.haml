- @title =  "Users"

#user
  %h2
    Members of the Kansas City Ruby Community
  - @users.each do |user|
    .user
      %img{:src => "#{user.avatar}", :height => "40"}
      = user.name
      -if user.show_email
        =link_to("#{user.email}", "mailto:#{user.email}")
      = "Ruby User Since #{user.ruby_since.strftime("%Y")}"
      = user.neighborhood
      = user.available
      -if current_user
        -if (current_user.id == user.id) 
          .user-management{:style => "float:right;"}
            = link_to 'Edit', edit_user_path(user)
            = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
      %iframe{:allowtransparency => "true", :frameborder => "0", :scrolling => "no", :src => "http://platform.twitter.com/widgets/follow_button.html?screen_name=#{user.twitter_user_id}&show_count=false", :style => "width:200px; height:20px;"}